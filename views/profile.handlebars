{{ layout/header pageTitle = "Profile"}}
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>Create a new Chirp</h2>
            <form action="">
                <div class="form-group">
                    <textarea name="chirp" id="chirp" cols="30" rows="10" class="form-control"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Post</button>
            </form>
        </div>
        <div class="col-md-6">
            <h2>Your Chirps</h2>
            <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between align-items-center">Example chirp 1
                    <button type="button" class="btn btn-danger"> Delete</button>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">Example chirp 2
                    <button type="button" class="btn btn-danger"> Delete</button>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">Example chirp 3
                    <button type="button" class="btn btn-danger"> Delete</button>
                </li>
            </ul>
        </div>
    </div>
</div>

