{{ layout/header pageTitle = "Profile"}}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center">Welcome {{user.name}}</h1>
        </div>
    <div class="row">
        <div class="col-md-6">
            <h2>Create a new Chirp</h2>
            <form id="chirpForm">
                <div class="form-group">
                    <textarea name="chirp" id="chirp" cols="30" rows="10" class="form-control"></textarea>
                </div>
                <button type="submit" class="post">Post</button>
            </form>
        </div>
        <div class="col-md-6">
            <h2>Your Chirps</h2>
            <ul class="list-group">
            {{#each chirps as |chirp|}}
                <ul class="list-group-item list-group-item">{{chirp.content}}</ul> <button id="delete">Delete</button>
            {{/each}}
            </ul>



        </div>
    </div>
</div>



<script src="/js/postChirp.js"></script>