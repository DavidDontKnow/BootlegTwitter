<div class='container-fluid'>
  <div class='row'>
    <div class='col-md-3'></div>
    <div class='col-md-6'>
      <h1 class='text-center mb-5'>The Branch</h1>
      {{#each chirps as |chirp|}}
        <div class='list-group p-1'>
          <a href='#' class='list-group-item list-group-item-action bg-dark text-white'>
            <p class='mb-1 text-primary'>@{{user.name}} Chirped... </p>
            <h6 class='mb-1'>{{chirp.content}}</h6>
            <span class="text-grey">{{format_date chirp.createdAt}}</span>
          </a>
        </div>
      {{/each}}
    </div>
    <div class='col-md-3'></div>
  </div>
</div>